% A test for attachments of Hands
% F. Nedelec, April 7th 2010

set simul system
{
    time_step = 0.005
    viscosity = 10
}

set system display
{
    point_size = 2
    link_size = 0
    report = single
    style = 2
    zoom  = 0.66
    tile = 2, 2
}

set space cell
{
    shape = periodic
}

new cell
{
    length = 10, 10, 10
}

set fiber microtubule
{
    rigidity = 20
    segmentation = 1
    display = ( line_width = 1 )
}

set hand binder
{
    binding_rate = 10
    binding_range = 1
    unbinding_rate = 0
    unbinding_force = 1
}

set single grafted
{
    hand = binder
    activity = fixed
    stiffness = 0
}

new microtubule
{
    length = 5
}

new 10000 grafted

run system
{
    nb_steps = 1000
    nb_frames = 10
}
