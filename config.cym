% A confined fiber
% F. Nedelec, April 2010

set simul system
{
    time_step = 0.005
    viscosity = 0.02
}

set space cell
{
    shape = circle
}

new cell
{
    radius = 5
}

set fiber microtubule
{
    rigidity = 20
    segmentation = 0.5
    confine = inside, 200, cell
}

new 1 microtubule
{
    length = 12
}

run 5000 system
{
    nb_frames = 10
}
